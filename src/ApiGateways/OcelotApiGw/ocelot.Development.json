{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001" //Port API Gate way
  },
  "Routes": [
    // Customer API: http://localhost:5003/api/customer
    {
      "UpstreamPathTemplate": "/api/customers/{username}", // Route request from client
      "UpstreamHttpMethod": [
        "GET"
      ], // Method
      "DownstreamPathTemplate": "/api/customers/{username}", // Route request send to backend
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        //List port API listen
        {
          "Host": "localhost",
          "Port": 5003
        }
      ]
    }
  ]
}
